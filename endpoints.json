{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles sorted by date in descending order",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 2,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the article with the corresponding id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 2,
        "title": "Sony Vaio; or, The Laptop",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "Text from the article..",
        "created_at": "2020-10-16T05:03:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a specific article sorted by date in descending order",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 2,
          "votes": 0,
          "created_at": "2020-10-16T05:03:00.000Z",
          "author": "icellusedkars",
          "body": "Text from the article..",
          "article_id": 5
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "inserts a comment to a specific article into the comments table and serves the new comment with the added default properties",
    "queries": [],
    "exampleRequestBody": {
      "username": "rogersop",
      "body": "Text from the comment.."
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 2,
        "author": "icellusedkars",
        "body": "Text from the article..",
        "article_id": 5,
        "votes": 0,
        "created_at": "2020-10-16T05:03:00.000Z"
      }
    }
  }
}
